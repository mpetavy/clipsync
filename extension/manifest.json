{
  "manifest_version": 3,
  "name": "Bookmark Sync",
  "version": "1.0",
  "description": "Syncs bookmarks from a remote server.",
  "permissions": ["bookmarks", "storage", "alarms"],
  "host_permissions": ["http://*","https://*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}